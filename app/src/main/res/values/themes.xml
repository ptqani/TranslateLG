<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TranslateLG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SwitchTextStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">18sp</item> <!-- Đặt kích thước chữ -->
        <item name="android:textStyle">bold</item> <!-- Đặt chữ đậm -->
    </style>
<!--    light mode-->
    <style name="SCREEN">
    <item name="android:background">#F9F7F7</item>
    </style>

    <style name="BOX">
        <item name="android:background">#FFFFFF</item>
    </style>
<!--    text mode-->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>
    <style name="SWITCH">
        <item name="android:background">#2D2698</item>
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="IMGVIEW">
        <item name="android:tint">@color/black</item>
    </style>
</resources>